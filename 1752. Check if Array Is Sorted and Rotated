problem link: https://leetcode.com/problems/check-if-array-is-sorted-and-rotated/description/
class Solution {
public:
    
    bool check(vector<int>& nums) {
        int c=0, index=0;
        for(int i=1 ;i<nums.size(); i++)
        {
            if(nums[i]>=nums[i-1])
            continue;
            else
            {
                index=i;
                c++;
            }
        }
        if(c==0)
            return true;
        if(c>1)
            return false;
        else if(nums[nums.size()-1]>nums[0])
            return false;
        return true;
    }
};
